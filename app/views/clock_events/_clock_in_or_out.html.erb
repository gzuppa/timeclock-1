<%= form_for :user,
						:method => :post,
          	:url => clock_switch_path,
            :html => {:class => "clock_form"} do |f| %>

	<div class="controls">
	  <%= f.text_field :email, :placeholder => "Email" %>
	</div>

	<div class="controls">
	  <%= f.text_field :password, :placeholder => "Password" %>
	</div>

	<div>
    <%= f.submit "Clock In / Out", :class => "button" %>
  </div>

<% end %>